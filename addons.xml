<addons>

<addon id="script.iVueSkins" name="iVue2 Skins" version="1.0.2" provider-name="retrorat1">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">iVue2 Skins</summary>
    <description lang="en">This is the place to find all Ivue2 TV Guide Skins Thanks to all authors of the code</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.stalker" name="IPTV Stalker Papiao" version="10.0.0" provider-name="dara">
    <requires>
		<import addon="xbmc.python" version="2.14.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="addon.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.service" library="server.py" start="startup" />
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">IPTV Stalker Papiao</summary>
		<description lang="en">IPTV Stalker for Papiao servers, based on original code by esxbr </description>
		<license>GNU General Public License, v2</license>
		<language></language>
		<forum>http://iptvtalk.org/</forum>
	</extension>
</addon>

<addon id="script.ivueguide" name="Ivue TV Guide" version="0.0.6" provider-name="iVue Tv Guide">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.simplejson" version="2.0.10"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py"/>
    <extension point="xbmc.service" library="service.py" start="login"/>
	<extension point="xbmc.addon.metadata">
	<provides>video</provides>
		<description lang="en">Ivue TV Guide dedicated tv guide for iptv Stalker systems</description>
		<disclaimer lang="en">Ivue Guide is forked and based on FTV Guide, Dixie , Ivue , tommy winthers original code, </disclaimer>
	</extension>
</addon>

<addon id="xbmc.repo.ivueguide" name="iVue2 TV Guide Repo" version="0.0.1" provider-name="iVue">
	<extension point="xbmc.addon.repository" name="iVue2 TV Guide Add-ons Repository">
		<info compressed="false">https://raw.githubusercontent.com/totaltec2014/ivue2/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/totaltec2014/ivue2/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/totaltec2014/ivue2/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install iVue2 TV Guide </summary>
		<description>Download and install for iVue2 Tv guide addons </description>
		<disclaimer> Repo for iVue2 Tv guide addon </disclaimer>
		<platform>all</platform>
	</extension>
</addon>

</addons>

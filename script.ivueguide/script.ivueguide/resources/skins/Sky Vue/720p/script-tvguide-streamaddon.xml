<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="true">1000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <animation effect="slide" start="0" end="0" time="500">WindowOpen</animation>
    <animation effect="slide" start="0" end="0" time="500">WindowClose</animation>
    <controls>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>262</width>
            <height>720</height>
            <texture>menbg.jpg</texture>
        </control>

        <control type="label" id="4000">
            <posx>20</posx>
            <posy>20</posy>
            <width>600</width>
            <height>80</height>

           <textcolor>ffffffff</textcolor>
            <font>font13</font>
            <align>center</align>
            <label></label>
            <wrapmultiline>true</wrapmultiline>

        </control>

        <control type="fixedlist" id="1000">
            <posx>40</posx>
            <posy>0</posy>
            <width>262</width>
            <height>720</height>
            <viewtype label="list">list</viewtype>
            <orientation>vertical</orientation>
            <focusposition>1</focusposition>

            <itemlayout width="200" height="190">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>190</width>
                    <height>180</height>
                    <texture></texture>
                </control>
                <control type="image">
                    <posx>31</posx>
                    <posy>16</posy>
                    <width>128</width>
                    <height>100</height>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label">
                    <posx>20</posx>
                    <posy>110</posy>
                    <width>150</width>
                    <height>40</height>
                    <align>center</align>
                    <font>font13</font>
                    <textcolor>ffffffff</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="200" height="190">
                <control type="image">
                    <posx>10</posx>
                    <posy>0</posy>
                    <width>170</width>
                    <height>155</height>
                    <texture>metal frame.png</texture>
                    <visible>Control.HasFocus(1000)</visible>
                </control>
                <control type="image">
                    <posx>31</posx>
                    <posy>16</posy>
                    <width>128</width>
                    <height>100</height>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label">
                    <posx>20</posx>
                    <posy>110</posy>
                    <width>150</width>
                    <height>40</height>
                    <align>center</align>
                    <font>font13</font>
                    <textcolor>ffffffff</textcolor>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
    </controls>
</window>